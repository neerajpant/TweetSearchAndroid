<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:elevation="@dimen/item_tweet_card_elevation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:padding="@dimen/item_tweet_padding">

        <ImageView
            android:id="@+id/tweeter_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@+id/tweet_creator_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tweet_creator_name"
            android:layout_width="183dp"
            android:layout_height="24dp"

            android:text="Donald Trump"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/item_twitter_creator_text_size"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tweet_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tweeter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/tweeter_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tweeter_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="handler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tweeter_name"
            app:layout_constraintTop_toBottomOf="@+id/tweeter_name"
            app:layout_constraintVertical_bias="0.054" />

        <ImageView
            android:id="@+id/image_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_favorite_blue_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tweet_love_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="112313"
            app:layout_constraintBottom_toBottomOf="@+id/image_like"
            app:layout_constraintEnd_toStartOf="@+id/image_like"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_like"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/image_retweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/image_like"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_like"
            app:layout_constraintVertical_bias="0.078"
            app:srcCompat="@drawable/ic_group_retweet_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tweet_retweet_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2131313"
            app:layout_constraintBottom_toBottomOf="@+id/image_retweet"
            app:layout_constraintEnd_toStartOf="@+id/image_retweet"
            app:layout_constraintHorizontal_bias="0.958"
            app:layout_constraintStart_toStartOf="@+id/tweeter_image"
            app:layout_constraintTop_toTopOf="@+id/image_retweet"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tweet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="TextView"
            android:textSize="@dimen/item_twitter_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tweeter_image"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>